<div class="row">
    {{#each books}}
    <div class="col col-sm-3">
        <div class="card book-item shadow-sm rounded-lg">
            <form method="post" action="/book/purchase/{{this._id}}">
                <!-- Ensuring image also has rounded corners -->
                <img src="{{this.cover_image}}" class="card-img-top rounded-top" alt="Book Cover" style="height: 200px; object-fit: cover;">
                <div class="card-body">
                    <h5 class="card-title text-center">{{this.book_name}}</h5>
                    <p class="card-text"><strong>Author:</strong> {{this.author_name}}</p>
                    <p class="card-text"><strong>ISBN:</strong> {{this.isbn}}</p>
                </div>
                <div class="card-footer text-center">
                    <button type="submit" class="btn btn-info w-100 rounded-pill">Borrow</button>
                </div>
            </form>
        </div>
    </div>
    {{/each}}
</div>

<style>
.card:hover {
    transform: scale(1.05);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
}

.card {
    transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    border-radius: 15px;
}

.card-footer .btn {
    border-radius: 30px;
}
</style>
